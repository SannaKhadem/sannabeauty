<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Image Dashboard</title>
</head>
<body>
  <h1>Image Dashboard</h1>

  <% if (images.length === 0) { %>
    <p>No images uploaded yet.</p>
  <% } else { %>
    <ul>
      <% images.forEach(image => { %>
        <li>
          <img src="<%= image.path %>" alt="image" width="150">
          <p><%= image.description %></p>
          <form action="/admin/delete/<%= image._id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this image?');">
            <button type="submit">Delete</button>
          </form>
        </li>
      <% }) %>
    </ul>
  <% } %>

  <p><a href="/admin/upload">Upload new image</a></p>
</body>
</html>
